<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giao Diện Lịch và Bảng Dữ Liệu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/vn.js"></script>
    <script>
        function setDefaultDate(defaultDate) {
          flatpickr("#date", {
            dateFormat: "d-m-Y",
            defaultDate: defaultDate,
            locale: "vn"
          });
        }
        window.onload = function() {
          setDefaultDate("<%= defaultDate %>");
        };
    </script>
      
  </head>
  <body class="dark:bg-gray-900 font-sans antialiased">
    <div class="flex flex-wrap justify-center mt-10">
      <!-- Bảng Dữ Liệu -->
      <div class="w-full lg:w-2/3 p-4">
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
          <h1 class="text-3xl m-3 font-bold text-teal-600 dark:text-teal-400 text-center">Điểm danh theo ngày</h1>
          <table class="w-full text-left rtl:text-right text-gray-700 dark:text-gray-200">
            <thead class="text-gray-800 uppercase bg-teal-100 dark:bg-teal-800 dark:text-gray-400">
              <tr>
                <th scope="col" class="px-6 py-3">Name</th>
                <th scope="col" class="px-6 py-3">MSSV</th>
                <th scope="col" class="px-6 py-3">Addr_Bluetooth</th>
                <th scope="col" class="px-6 py-3">Time</th>
                <th scope="col" class="px-6 py-3">Date</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(item => { %>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-teal-50 dark:hover:bg-teal-600 odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800">
                <td class="px-6 py-4"><%= item.Name %></td>
                <td class="px-6 py-4"><%= item.MSSV %></td>
                <td class="px-6 py-4"><%= item.Addr_Bluetooth %></td>
                <td class="px-6 py-4"><%= item.time %></td>
                <td class="px-6 py-4"><%= item.date %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <!-- Chọn Ngày Tháng Năm -->
      <div class="w-full lg:w-1/3 p-4">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold mb-4 text-teal-600 dark:text-teal-400">Chọn Ngày Tháng Năm</h2>
          <form action="/searchDate" method="POST" class="space-y-4">
            <div>
              <label for="date" class="block text-gray-700 dark:text-gray-200">Chọn Ngày:</label>
              <input type="text" id="date" name="date" class="w-full px-3 py-2 border rounded-md dark:bg-gray-700 dark:text-gray-200 dark:border-gray-600">
            </div>
            <button type="submit" class="w-full py-2 px-4 bg-teal-600 text-white rounded-md hover:bg-teal-700">Tìm</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
